<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head.ejs %>
        <title>Soluiones IoT</title>
</head>

<body>
    <div class="container">
        <header>
            <% include ../partials/header.ejs %>
        </header class="container">

        <main>

            <h1>Lista de Soluciones IoT</h1>

            <table>
                <thead>
                    <tr>
                        <th>idHome</th>
                        <th>idGateway</th>
                        <th>idNodoZigbeePues</th>
                    </tr>
                </thead>
                <tbody>
                    <% registros.forEach(function(registro) { %>
                        <tr>

                            <td>
                                <a href="/solucionIoT/rootInstance/show/<%= registro[0] %>">
                                    <%= registro[1].idHome %>
                                </a>
                            </td>
                            <td>
                                <%= registro[1].idHome %>
                            </td>
                            <td>
                                <%= registro[1].idHome %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <h3><a href="/solucionIoT/rootInstance/create">Create nueva Solucion IoT</a></h3>


        </main>

        <footer>
            <% include ../partials/footer.ejs %>
        </footer>
    </div>
    <script src="/libs-style/jquery.js"></script>
    <script src="/libs-style/popper.js"></script>
    <script src="/libs-style/bootstrap.js"></script>
</body>

</html>

