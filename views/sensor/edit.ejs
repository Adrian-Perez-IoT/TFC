<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head.ejs %>
        <title>Edit Sensor</title>
</head>

<body>
    <div class="container">
        <header>
            <% include ../partials/header.ejs %>
        </header class="container">

        <main>

            <form action="/solucionIoT/sensores/update/<%= idSensor %>" method="post">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                ID del Sensor:
                            </td>
                            <td><input type="text" name="idSensor" value="<%= idSensor %>" disabled/></td>
                        </tr>
                        <tr>
                            <td>
                                <%= Object.keys(sensor)[0] %>
                            </td>
                            <td><input type="text" name="lugarUbicacion" value="<%= Object.values(sensor)[0] %>" /></td>
                        </tr>
                        <tr>
                            <td>
                                <%= Object.keys(sensor)[1] %>
                            </td>
                            <td><input type="text" name="model" value="<%= Object.values(sensor)[1] %>" /></td>
                        </tr>
                        <tr>
                            <td>
                                <%= Object.keys(sensor)[2] %>
                            </td>
                            <td><input type="text" name="type" value="<%= Object.values(sensor)[2] %>" /></td>
                        </tr>
                        <tr>
                            <td colspan="2"><button type="submit">Update</button></td>
                        </tr>
                    </tbody>
                </table>
            </form>

        </main>

        <footer>
            <% include ../partials/footer.ejs %>
        </footer>
    </div>
    <script src="/libs-style/jquery.js"></script>
    <script src="/libs-style/popper.js"></script>
    <script src="/libs-style/bootstrap.js"></script>
</body>

</html>