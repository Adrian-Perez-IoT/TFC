<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head.ejs %>
    <title>Nodo Zigbee</title>
</head>
<body>
    <div class="container">
        <header>
            <% include ../partials/header.ejs %>
        </header class="container">
        <main>
            <br>
            <h3>Lista de todos los nodos Zigbee registrados</h3>
            <br>
            <% if (registros) { %>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Dirección MAC</th>
                            <th>Modelo</th>
                            <th>Tipo de rol</th>
                            <th>Lugar de ubicación</th>
                            <th>Estado de funcionamiento</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% registros.forEach(function(registro) { %>
                            <tr>
                                <td>
                                    <a href="/solucionIoT/nodoZigbee/show/<%= registro[0]%>">
                                        <%= registro[0] %>
                                    </a>
                                </td>
                                <td>
                                    <%= registro[1].mac %>
                                </td>
                                <td>
                                    <%= registro[1].model %>
                                </td>
                                <td>
                                    <%= registro[1].typeRol %>
                                </td>
                                <td>
                                    <%= registro[1].lugarUbicac %>
                                </td>
                                <td>
                                    <%= registro[1].estadoFuncionamiento %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            <% } else{ %>
                <h4>No existen registros en la base de datos</h4>
            <% } %>

            <br>
            <h3><a href="/solucionIoT/nodoZigbee/create">Create nuevo nodo Zigbee</a></h3>
        </main>
        <footer>
            <% include ../partials/footer.ejs %>
        </footer>
    </div>
    <script src="/libs-style/jquery.js"></script>
    <script src="/libs-style/popper.js"></script>
    <script src="/libs-style/bootstrap.js"></script>
</body>

</html>
